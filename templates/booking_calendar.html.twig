{#
Available variables:
  - params [
    - api_endpoint
    - element_id
    - rooms
  ]
#}
<div id="booking-filters-{{ params.element_id }}">
  <div class="form-group">
    <input type="date" class="booking-filter" id="booking-date-picker-{{ params.element_id }}">
  </div>
  <div class="form-group">
    <select name="booking-room-select" class="booking-filter" id="booking-room-select-{{ params.element_id }}">
      <option value="_empty"> {{ '- Select -'|t }} </option>
    </select>
  </div>
  <div booking-element-id="{{ params.element_id }}" class="booking_calendar" id="calendar-{{ params.element_id }}"></div>
</div>

<div id="modalContainer">
  <div id="modal" class="modal">
      <div class="modal-content">
        <div class="modal-header">
          <span class="booking-close">&times;</span>
          <h2 id="bookingHeader"></h2>
        </div>
        <div class="modal-body">
          <p id="bookingResourceId"></p> 
          <p id="bookingResourceTitle"></p>
          <p id="bookingFrom"></p>
          <p id="bookingTo"></p>
        </div>
        <div class="modal-footer">
          <button id="bookingSubmit" class="btn btn-primary"></button>
        </div>
      </div>
  </div>
</div> 